<h2>重新发送解锁邮件</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label '邮箱' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit '重新发送' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
